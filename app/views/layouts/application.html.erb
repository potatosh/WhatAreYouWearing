<!DOCTYPE html>
<html>
  <head>
    <title>WhatAreYouWearing</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="brand">
            WhatAreYouWearing
          </div>
          <div class="nth pull-right">
            <%= nth %> 回目
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class:"alert alert-#{key}") %>
      <% end %>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
